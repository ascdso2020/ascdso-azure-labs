{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "primaryLocation": {
            "type": "string",
            "metadata": {
                "description": "The location the VWAN resource and primary VWAN hub is deployed."
            }
        },
        "secondaryLocation": {
            "type": "string",
            "metadata": {
                "description": "The location the secondary VWAN hub is deployed"
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "The tags that will be associated to the resources"
            },
            "defaultValue": {
                "environment": "lab"
            }
        },
        "uniqueData": {
            "type": "string",
            "metadata": {
                "description": "Data used to append to resources to ensure uniqueness"
            },
            "defaultValue": "[substring(newGuid(),0,8)]"
        },
        "vnetCidrR1Workload1": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the workload 1 virtual network in region 1"
            }
        },
        "vnetCidrR1Workload2": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the workload 2 virtual network in region 1"
            }
        },
        "vnetCidrR2Workload1": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the workload 1 virtual network in region 2"
            }
        },
        "vnetCidrR2Workload2": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the workload 2 virtual network in region 2"
            }
        },
        "vnetSubnetCidrR1Workload1App": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the app subnet in the workload 1 virtual network in region 1"
            }
        },
        "vnetSubnetCidrR1Workload2App": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the app subnet in the workload 2 virtual network in region 1"
            }
        },
        "vnetSubnetCidrR2Workload1App": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the app subnet in the workload 1 virtual network in region 2"
            }
        },
        "vnetSubnetCidrR2Workload2App": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the app subnet in the workload 2 virtual network in region 2"
            }
        },
        "vwanHubCidrR1": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the VWAN hub in the primary region"
            }
        },
        "vwanHubCidrR2": {
            "type": "string",
            "metadata": {
                "description": "The CIDR assigned to the VWAN hub in the secondary region"
            }
        }
    },
    "variables": {
        "_apiVersionDiagnostics": "2021-05-01-preview",
        "_apiVersionNetworks": "2022-05-01",
        "_apiVersionResources": "2020-06-01",
        "_templatesUriGeneral": "[uri(deployment().properties.templateLink.uri, '../../general/')]",
        "deploymentNameLawCentral": "deploy-law-central",
        "deploymentNameStorageAccountNsg": "deploy-storage-nsg",
        "deploymentUriLaw": "[concat(variables('_templatesUriGeneral'), 'deploy-law.json')]",
        "deploymentUriStorage": "[concat(variables('_templatesUriGeneral'), 'deploy-storage-account.json')]",
        "storageAccountNamePrefix": "stcent",
        "virtualNetworkGatewayNameR1": "[concat('vpngw', parameters('primaryLocation'), parameters('uniqueData'))]",
        "virtualNetworkGatewayNameR2": "[concat('vpngw', parameters('secondaryLocation'), parameters('uniqueData'))]",  
        "vnetNameR1Workload1": "[concat('vnetwl1', parameters('primaryLocation'), parameters('uniqueData'))]",
        "vnetNameR1Workload2": "[concat('vnetwl2', parameters('primaryLocation'), parameters('uniqueData'))]",
        "vnetNameR2Workload1": "[concat('vnetwl1', parameters('secondaryLocation'), parameters('uniqueData'))]",
        "vnetNameR2Workload2": "[concat('vnetwl2', parameters('secondaryLocation'), parameters('uniqueData'))]",
        "vnetSubnetNameWorkloadApp": "snet-app",
        "vnetStandardDdosProtection": false,
        "vwanHubNameR1": "[concat('vhub', parameters('primaryLocation'), parameters('uniqueData'))]",
        "vwanHubNameR2": "[concat('vhub', parameters('secondaryLocation'), parameters('uniqueData'))]",
        "vwanName": "[concat('vwan', parameters('uniqueData'))]"

    },
    "resources": [
        {
            "name": "[variables('deploymentNameLawCentral')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionResources')]",
            "dependsOn": [
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "tags": {
                        "value": "[parameters('tags')]"
                    },
                    "uniqueData": {
                        "value": "[parameters('uniqueData')]"
                    }
                },
                "templateLink": {
                    "uri": "[variables('deploymentUriLaw')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "name": "[variables('deploymentNameStorageAccountNsg')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('_apiVersionResources')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', variables('deploymentNameLawCentral'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "defaultAction": {
                        "value": "Deny"
                    },
                    "laWorkspaceResourceId": {
                        "value": "[reference(variables('deploymentNameLawCentral')).outputs.logAnalyticsResourceId.value]"
                    },
                    "storageAccountNamePrefix": {
                        "value": "[variables('storageAccountNamePrefix')]"
                    },
                    "tags": {
                        "value": "[parameters('tags')]"
                    },
                    "uniqueData": {
                        "value": "[parameters('uniqueData')]"
                    }
                },
                "templateLink": {
                    "uri": "[variables('deploymentUriStorage')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualWans",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "name": "[variables('vwanName')]",
            "location": "[parameters('primaryLocation')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/',variables('deploymentNameStorageAccountNsg'))]"
            ],
            "properties": {
                "allowBranchToBranchTraffic": "true",
                "allowVnetToVnetTraffic": "true",
                "disableVpnEncryption": "false",
                "type": "Standard"
            }
        },
        {
            "type": "Microsoft.Network/virtualHubs",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "name": "[variables('vwanHubNameR1')]",
            "location": "[parameters('primaryLocation')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualWans', variables('vwanName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('vwanHubCidrR1')]",
                "hubRoutingPreference": "ExpressRoute",
                "preferredRoutingGateway": "ExpressRoute",
                "sku": "Standard",
                "virtualRouterAsn": "65515",
                "virtualRouterAutoScaleConfiguration": {
                    "minCapacity": 2
                },
                "virtualWan": {
                    "id": "[resourceId('Microsoft.Network/virtualWans',variables('vwanName'))]"
                }


            }
        },
        {
            "type": "Microsoft.Network/virtualHubs",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "name": "[variables('vwanHubNameR2')]",
            "location": "[parameters('secondaryLocation')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualWans', variables('vwanName'))]",
                "[resourceId('Microsoft.Network/virtualHubs', variables('vwanHubNameR1'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('vwanHubCidrR2')]",
                "hubRoutingPreference": "ExpressRoute",
                "preferredRoutingGateway": "ExpressRoute",
                "sku": "Standard",
                "virtualRouterAsn": "65515",
                "virtualRouterAutoScaleConfiguration": {
                    "minCapacity": 2
                },
                "virtualWan": {
                    "id": "[resourceId('Microsoft.Network/virtualWans',variables('vwanName'))]"
                }


            }
        },
        {
            "name": "[variables('virtualNetworkGatewayNameR1')]",
            "type": "Microsoft.Network/vpnGateways",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "location": "[parameters('primaryLocation')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualHubs', variables('vwanHubNameR1'))]"
            ],
            "properties": {
                "bgpSettings": {
                    "asn": 65515
                },
                "virtualHub": {
                    "id": "[resourceId('Microsoft.Network/virtualHubs', variables('vwanHubNameR1'))]"
                },
                "vpnGatewayScaleUnit": "1"
            }
        },
        {
            "name": "[variables('virtualNetworkGatewayNameR2')]",
            "type": "Microsoft.Network/vpnGateways",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "location": "[parameters('secondaryLocation')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualHubs', variables('vwanHubNameR2'))]"
            ],
            "properties": {
                "bgpSettings": {
                    "asn": 65515
                },
                "virtualHub": {
                    "id": "[resourceId('Microsoft.Network/virtualHubs', variables('vwanHubNameR2'))]"
                },
                "vpnGatewayScaleUnit": "1"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('vnetNameR1Workload1')]",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "location": "[parameters('primaryLocation')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetCidrR1Workload1')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('vnetSubnetNameWorkloadApp')]",
                        "properties": {
                            "addressPrefix": "[parameters('vnetSubnetCidrR1Workload1App')]",
                            "privateEndpointNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "enableDdosProtection": "[variables('vnetStandardDdosProtection')]"
            },
            "resources": [
            ]
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('vnetNameR1Workload2')]",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "location": "[parameters('primaryLocation')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetCidrR1Workload2')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('vnetSubnetNameWorkloadApp')]",
                        "properties": {
                            "addressPrefix": "[parameters('vnetSubnetCidrR1Workload2App')]",
                            "privateEndpointNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "enableDdosProtection": "[variables('vnetStandardDdosProtection')]"
            },
            "resources": [
            ]
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('vnetNameR2Workload1')]",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "location": "[parameters('secondaryLocation')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetCidrR2Workload1')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('vnetSubnetNameWorkloadApp')]",
                        "properties": {
                            "addressPrefix": "[parameters('vnetSubnetCidrR2Workload1App')]",
                            "privateEndpointNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "enableDdosProtection": "[variables('vnetStandardDdosProtection')]"
            },
            "resources": [
            ]
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('vnetNameR2Workload2')]",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "location": "[parameters('secondaryLocation')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetCidrR2Workload2')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('vnetSubnetNameWorkloadApp')]",
                        "properties": {
                            "addressPrefix": "[parameters('vnetSubnetCidrR2Workload2App')]",
                            "privateEndpointNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "enableDdosProtection": "[variables('vnetStandardDdosProtection')]"
            },
            "resources": [
            ]
        },
        {
            "type": "Microsoft.Network/virtualHubs/hubVirtualNetworkConnections",
            "name": "[concat(variables('vwanHubNameR1'),'/',variables('vnetNameR1Workload1'),'-conn')]",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualHubs', variables('vwanHubNameR1'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetNameR1Workload1'))]"
            ],
            "properties": {
                "allowHubToRemoteVnetTransit": true,
                "allowRemoteVnetToUseHubVnetGateways": true,
                "enableInternetSecurity": true,
                "remoteVirtualNetwork": {
                    "id": "[resourceid('Microsoft.Network/virtualNetworks',variables('vnetNameR1Workload1'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualHubs/hubVirtualNetworkConnections",
            "name": "[concat(variables('vwanHubNameR1'),'/',variables('vnetNameR1Workload2'),'-conn')]",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualHubs', variables('vwanHubNameR1'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetNameR1Workload2'))]",
                "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', variables('vwanHubNameR1'), concat(variables('vnetNameR1Workload1'), '-conn'))]"
            ],
            "properties": {
                "allowHubToRemoteVnetTransit": true,
                "allowRemoteVnetToUseHubVnetGateways": true,
                "enableInternetSecurity": true,
                "remoteVirtualNetwork": {
                    "id": "[resourceid('Microsoft.Network/virtualNetworks',variables('vnetNameR1Workload2'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualHubs/hubVirtualNetworkConnections",
            "name": "[concat(variables('vwanHubNameR2'),'/',variables('vnetNameR2Workload1'),'-conn')]",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualHubs', variables('vwanHubNameR2'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetNameR2Workload1'))]",
                "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', variables('vwanHubNameR1'), concat(variables('vnetNameR1Workload2'), '-conn'))]"
            ],
            "properties": {
                "allowHubToRemoteVnetTransit": true,
                "allowRemoteVnetToUseHubVnetGateways": true,
                "enableInternetSecurity": true,
                "remoteVirtualNetwork": {
                    "id": "[resourceid('Microsoft.Network/virtualNetworks',variables('vnetNameR2Workload1'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualHubs/hubVirtualNetworkConnections",
            "name": "[concat(variables('vwanHubNameR2'),'/',variables('vnetNameR2Workload2'),'-conn')]",
            "apiVersion": "[variables('_apiVersionNetworks')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualHubs', variables('vwanHubNameR2'))]",
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetNameR2Workload2'))]",
                "[resourceId('Microsoft.Network/virtualHubs/hubVirtualNetworkConnections', variables('vwanHubNameR2'), concat(variables('vnetNameR2Workload1'), '-conn'))]"
            ],
            "properties": {
                "allowHubToRemoteVnetTransit": true,
                "allowRemoteVnetToUseHubVnetGateways": true,
                "enableInternetSecurity": true,
                "remoteVirtualNetwork": {
                    "id": "[resourceid('Microsoft.Network/virtualNetworks',variables('vnetNameR2Workload2'))]"
                }
            }
        }
    ],
    "outputs": {
    }
}
